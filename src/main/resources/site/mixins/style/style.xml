<mixin>
    <display-name>Style</display-name>
    <items>
        <item-set name="style">
            <label>Style</label>
            <occurrences minimum="0" maximum="0"/>
            <items>
                <input name="name" type="TextLine">
                    <label>Name</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config/>
                </input>
                <input name="value" type="TextLine">
                    <label>Value</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config/>
                </input>
            </items>
        </item-set>
    </items>
</mixin>
