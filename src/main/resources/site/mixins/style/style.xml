<mixin>
    <display-name>Style</display-name>
    <items>
        <option-set name="style">
          <label>Styling</label>
          <expanded>false</expanded>
          <occurrences minimum="0" maximum="0"/>
          <options minimum="1" maximum="1">
            <option name="self">
              <label>Self</label>
              <default>true</default>
              <items>
                  <inline mixin="properties"/>
              </items>
            </option>
            <option name="nested">
              <label>Nested</label>
              <items>
                  <inline mixin="selector"/>
                  <inline mixin="properties"/>
              </items>
            </option>
          </options>
      </option-set>
    </items>
</mixin>
